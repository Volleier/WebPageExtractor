{
  "manifest_version": 3,
  "name": "商品信息提取器",
  "version": "0.1",
  "description": "提取商品页面的名称、图片、价格和描述信息",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.shopee.com/*",
    "*://*.shopee.ph/*",
    "*://*.shopee.sg/*",
    "*://*.shopee.vn/*",
    "*://*.shopee.co.id/*",
    "*://*.shopee.co.th/*",
    "*://*.shopee.my/*",
    "*://*.shopee.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tiktok.com/*",
        "*://*.shopee.com/*",
        "*://*.shopee.ph/*",
        "*://*.shopee.sg/*",
        "*://*.shopee.vn/*",
        "*://*.shopee.co.id/*",
        "*://*.shopee.co.th/*",
        "*://*.shopee.my/*",
        "*://*.shopee.tw/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}